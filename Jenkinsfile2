pipeline {
  agent { label 'Jenkins-Agent' }
  tools {
    jdk 'Java'
    maven 'maven'
  }
  stages{
    stage("Cleanup Workspace"){
            steps {
            cleanWS()
            }
    }
  }
   stage("Checkout from SCM"){
           steps {
           git branch: 'main', credentialsId: 'github' , url: 'https://github.com/VikneshVickiizz/VikneshSRE'
           }
   stage("Build Application"){
           steps {
           sh "mvn clean package"  
           }
   }
}
                 
